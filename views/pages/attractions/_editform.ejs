
<form class="form-horizontal" action="/attractions/<%= single_attraction.id %>?_method=PUT" method="POST" >
  <fieldset>
  <!-- Form Name -->
  <h2 style = "text-align: center">Attractions</h2>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="name">Name of Attraction</label>
    <div class="col-md-4">
    <input name="name" type="text" value="<%= single_attraction.name %>" class="form-control input-md">

    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="location">Location</label>
    <div class="col-md-4">
    <input id="location" name="location" type="text" value="<%= single_attraction.location %>" class="form-control input-md">

    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="besttimetodo">Best time to do</label>
    <div class="col-md-4">
    <input id="besttimetodo" name="besttimetodo" type="text"  value="<%= single_attraction.besttimetodo %>" class="form-control input-md">

    </div>
  </div>

  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="description">Description</label>
    <div class="col-md-4">
      <textarea class="form-control" value="<%= single_attraction.description %>" name="description"></textarea>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="category">Type of attraction</label>
    <div class="col-md-4">
      <select name="category" value="<%= single_attraction.category %>" class="form-control">
        <option value="1">Historical</option>
        <option value="2">Adventure</option>
        <option value="3">Leissure</option>
        <option value="4">Cultural</option>
      </select>
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="image">image url</label>
    <div class="col-md-4">
    <input id="image" name="image" type="text" value="<%= single_attraction.image %>" class="form-control input-md">
    </div>
  </div>

  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="submit"></label>
    <div class="col-md-4">
      <button id="submit" name="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>

  </fieldset>
  </form>
