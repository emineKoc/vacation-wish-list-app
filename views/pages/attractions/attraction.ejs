<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ../../partials/head %>
</head>
<body>
  <header>
    <%- include ../../partials/nav %>
  </header>
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%= single_attraction.image %>" width="350">
          <div class="caption">
            <h3><%= single_attraction.name %> </h3>
            <p><%= single_attraction.location %> </p>
            <p><%= single_attraction.description %> </p>
            <p><%= single_attraction.besttimetodo %> </p>
          </div>
          <form action="/attractions/<%=single_attraction.id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete">
          </form>
          <a href="/attractions/<%= single_attraction.id %>/edit">
            <button>Edit</button></a>
          </div>
        </div>
      </div>
    </div>
  </body>
  </html>
