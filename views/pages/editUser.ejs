<!DOCTYPE html>
<html lang="en">
<head>  <%- include ../partials/head %>
</head>
<body>
  <header>     <%- include ../partials/nav %>
 </header>
 <div class="container">
   <div class="starter-template">
     <div class="edit-form">
       <div class="col-lg-6">
         <form action="/users/<%=oneUser.id%>?_method=PUT" method="POST">
           <div class="form-group">
             <label>First Name:</label>
             <input type="text" for="f_name" name="f_name" class="form-control" placeholder="First Name" value="<%= oneUser.f_name %>">
           </div>
           <div class="form-group">
             <label>Last Name:</label>
             <input type="text" for="l_name" name="l_name" class="form-control" placeholder="Last Name" value="<%= oneUser.l_name %>">
           </div>
           <div class="form-group">
             <label>EMAIL:</label>
             <input type="email" for="email"  name="email" class="form-control" placeholder="Email Address" value="<%= oneUser.email %>">
           </div>
           <div class="form-group">
             <label>Current City:</label>
             <input type="text" name="current_city" for="current_city"  class="form-control" placeholder="Current City" value="<%= oneUser.current_city %>">
           </div>
           <div class="form-group">
             <label>New Password City:</label>
             <input type="password" name="password"  class="form-control" placeholder="Password">
           </div>
           <div class="form-group">
             <input type="password" name="confirm-password"  class="form-control" placeholder="Confirm Password">
           </div>
           <div class="form-group">
             <div class="row">
               <div class="col-sm-6 col-sm-offset-3">
                 <input type="submit" name="submit" class="form-control btn btn-register" value="Save Your Changes">
               </div>
             </div>
           </div>
         </form>
       </div>
     </div>
   </div>
 </div>


</body>
</html>
